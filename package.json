{
  "name": "offlimmma",
  "version": "1.0.0",
  "description": "A standalone offline map annotation and polygon painting application",
  "main": "electron/main.js",
  "scripts": {
    "start": "npm run build && electron .",
    "dev": "concurrently \"npm run watch\" \"wait-on dist/renderer.js && electron .\"",
    "build": "webpack --mode production",
    "watch": "webpack --mode development --watch",
    "package": "npm run build && electron-builder",
    "package:win": "npm run build && electron-builder --win",
    "package:mac": "npm run build && electron-builder --mac",
    "package:linux": "npm run build && electron-builder --linux"
  },
  "build": {
    "appId": "com.offlimmma.app",
    "productName": "OffLIMMMA",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "electron/**/*",
      "public/**/*"
    ],
    "win": {
      "target": "portable",
      "sign": false
    },
    "mac": {
      "target": "dmg",
      "icon": "public/icon.icns"
    },
    "linux": {
      "target": "AppImage",
      "icon": "public/icon.png"
    },
    "forceCodeSigning": false
  },
  "keywords": [
    "electron",
    "react",
    "openlayers",
    "map",
    "annotation",
    "paintbrush"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@electron/packager": "^19.0.1",
    "@types/node": "^20.10.0",
    "@types/react": "^18.2.45",
    "@types/react-dom": "^18.2.18",
    "concurrently": "^8.2.2",
    "css-loader": "^6.8.1",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "html-webpack-plugin": "^5.6.0",
    "style-loader": "^3.3.3",
    "ts-loader": "^9.5.1",
    "typescript": "^5.3.3",
    "wait-on": "^7.2.0",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4"
  },
  "dependencies": {
    "buffer": "^6.0.3",
    "distinct-colors": "^3.0.0",
    "geotiff": "^2.1.3",
    "jsts": "^2.11.0",
    "jszip": "^3.10.1",
    "ol": "^8.2.0",
    "ol-mapbox-style": "^13.1.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "shpjs": "^6.2.0"
  }
}
